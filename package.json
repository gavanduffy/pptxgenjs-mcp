{
  "name": "pptxgenjs-mcp",
  "version": "1.0.0",
  "description": "MCP server for creating PowerPoint presentations using PptxGenJS",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pptxgenjs-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:worker": "tsc",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:http": "node dist/smithery-server.js",
    "dev": "wrangler dev",
    "smithery:validate": "cat smithery.yaml"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "pptxgenjs",
    "powerpoint",
    "presentations",
    "pptx"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "markdown-it": "^14.1.0",
    "pptxgenjs": "^4.0.1",
    "pptxtojson": "^1.7.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.10.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "wrangler": "^4.48.0"
  }
}
